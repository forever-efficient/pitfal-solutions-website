# =============================================================================
# Pitfal Solutions - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_REGION=us-west-2
AWS_PROFILE=pitfal

# =============================================================================
# Public URLs (exposed to browser)
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://www.pitfal.solutions
NEXT_PUBLIC_MEDIA_URL=https://media.pitfal.solutions
NEXT_PUBLIC_API_URL=https://www.pitfal.solutions/api

# =============================================================================
# Stripe (Phase 2)
# =============================================================================
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# Authentication
# =============================================================================
NEXTAUTH_SECRET=your-secret-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Email (AWS SES)
# =============================================================================
SES_FROM_EMAIL=info@pitfal.solutions
SES_REGION=us-west-2

# =============================================================================
# Database (DynamoDB)
# =============================================================================
DYNAMODB_TABLE_PREFIX=pitfal-

# =============================================================================
# Local Development
# =============================================================================
# Set to 'development' for local, 'production' for deployed
NODE_ENV=development

# Local API port (when running Lambda locally)
LOCAL_API_PORT=3001

# =============================================================================
# Analytics (Optional)
# =============================================================================
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
