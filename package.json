{
  "name": "pitfal-solutions",
  "version": "0.1.0",
  "private": true,
  "description": "Pitfal Solutions Photography & Videography Website",
  "author": "Pitfal Solutions",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:changed": "vitest run --changed",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "optimize:images": "npx tsx scripts/optimize-images.ts",
    "prepare": "husky",
    "analyze": "ANALYZE=true next build",
    "size": "size-limit",
    "size:why": "size-limit --why"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.4",
    "clsx": "^2.1.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "tailwind-merge": "^2.2.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.0",
    "@playwright/test": "^1.43.0",
    "@size-limit/preset-app": "^11.0.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^14.2.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^1.4.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "husky": "^9.0.0",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.0",
    "msw": "^2.2.0",
    "plaiceholder": "^3.0.0",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "prettier-plugin-tailwindcss": "^0.5.0",
    "sharp": "^0.34.5",
    "size-limit": "^11.0.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.4.0"
  },
  "size-limit": [
    {
      "name": "First Load JS (total)",
      "path": ".next/static/chunks/*.js",
      "limit": "100 kB",
      "gzip": true
    },
    {
      "name": "Homepage bundle",
      "path": ".next/static/chunks/pages/index*.js",
      "limit": "30 kB",
      "gzip": true
    }
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  }
}
